<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>TicketTac</title>
    <!-- To add in order to scale the view for mobiles -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body>
    <%- include('navbar'); %>

      <div class="home">

        <div class="row">

         <!-- SIGN IN AREA -->
         <div class="col-12 col-sm-6 text-center">

          <div class="formArea">

            <h4 class="titleForm">Sign In</h4>

            <form action = "/users/signin" method="POST">
              <div class="form-group">
                <input name="emailFr" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Email">
              </div>
              <div class="form-group">
            
                <input name="passwordFr" type="password" class="form-control" placeholder="Password">
              </div>

              <button type="submit" class="btn btn-danger">Confirmer</button>
            </form>

          </div>

        </div>

          <!-- SIGN UP AREA -->
          <div class="col-12 col-sm-6 text-center">

            <div class="formArea">
              <h4 class="titleForm">Sign Up</h4>

              <form action = "/users/signup" method="POST" >
                <div class="form-group">
                 
                  <input name="usernameFr" type="text" class="form-control" placeholder="Name">
                </div>
                <div class="form-group">
                 
                  <input name="firstnameFr" type="text" class="form-control" placeholder="First Name">
                </div>

                <div class="form-group">
            
                  <input name="emailFr" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
                </div>
                <div class="form-group">
      
                  <input name="passwordFr" type="password" class="form-control"  placeholder="Enter password">
                </div>

                <button type="submit" class="btn btn-danger">Confirmer</button>
              </form>
            </div>

          </div>

          

        </div>
      </div>



    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>
